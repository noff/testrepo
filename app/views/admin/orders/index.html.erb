<h1>Заказы</h1>

<% @orders.each do |order| %>

    <h3>Заказ №<%= order.id%></h3>
    <p>Сумма заказа: <%= order.total %> руб.</p>
    <p>Клиент: <strong><%= order.user.full_name %></strong></p>

    <table class="table">
      <tr>
        <th>Наименование</th>
        <th>Кол-во</th>
        <th>Цена</th>
      </tr>
      <% order.item_orders.each do |io| %>
          <tr>
            <td><%= io.item.name %></td>
            <td><%= io.quantity %></td>
            <td><%= io.price %> руб.</td>
          </tr>
      <% end %>
    </table>

<% end %>