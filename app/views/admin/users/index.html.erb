<h1>Пользователи</h1>

<table class="table">
  <tr>
    <th>ID</th>
    <th>E-mail</th>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Дата регистрации</th>
    <th>Кол-во заказов</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.created_at.strftime('%d.%m.%Y') %></td>
      <td><%= user.orders.count %></td>
    </tr>
  <% end %>
</table>