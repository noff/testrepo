<h1><%= @item.name %></h1>
<div>
  <%= @item.description %>
</div>
<div>Цена: <%= @item.price %> руб.</div>
<% if @item.category %>
    <div><%= @item.category.name %></div>
<% end %>

<h2>Обсуждение</h2>
<%= render 'comments/form' %>

<% @item.comments.each do |c| %>
    <div>
      <%= c.created_at %>
      <%= link_to 'delete', c, method: :delete, confirm: 'Точно удалить?' %>
    </div>
    <div>
      <%= c.message %>
    </div>
<% end %>


